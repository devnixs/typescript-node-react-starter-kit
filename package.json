{
  "scripts": {
    "build": "better-npm-run build-front && better-npm-run build-back",
    "dev":
      "concurrently -k -p \"[{name}]\" -n \"Webpack,TypeScript Server,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"better-npm-run watch-client\" \"better-npm-run watch-typescript-server-files\" \"better-npm-run watch-server\"",
    "start": "better-npm-run start-server",
    "heroku-postbuild": "npm run build"
  },
  "betterScripts": {
    "build-front": {
      "command": "\"node_modules/.bin/webpack\" -p --progress --bail --colors",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "build-back": {
      "command": "tsc -p back",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "start-server": {
      "command": "node back/dist/server.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "watch-client": {
      "command": "webpack-dev-server --debug  --progress --colors --watch --hot --inline",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "watch-server": {
      "command": "opn http://localhost:5555 && nodemon --watch back/dist back/dist/server.js",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "watch-typescript-server-files": {
      "command": "tsc -w -p back",
      "env": {
        "NODE_ENV": "development"
      }
    }
  },
